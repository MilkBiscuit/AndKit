<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeBlackWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#AAAAAA</item>
    </style>

    <style name="CenterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CenterText.CityName">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CenterText.Temperature">
        <item name="android:textSize">80sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ForecastListText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ForecastListText.Date">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ForecastListText.MinTemperature">
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="ForecastListText.MaxTemperature">
        <item name="android:layout_marginEnd">8dp</item>
    </style>

</resources>
